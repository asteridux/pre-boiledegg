{
  "name": "pre-boiledegg",
  "version": "1.0.0",
  "description": "A Preact project starter",
  "main": "./build/lib.js",
  "scripts": {
    "release:init": "standard-version --first-release",
    "release": "standard-version",
    "prepublish": "npm run build",
    "build": "webpack",
    "watch:build": "webpack --watch",
    "prebuild:rollup": "rimraf build && mkdri build",
    "build:rollup": "rollup --config",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asteridux/pre-boiledegg.git"
  },
  "author": "Antonin Januska <antonin@antjanus.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/asteridux/pre-boiledegg/issues"
  },
  "homepage": "https://github.com/asteridux/pre-boiledegg#readme",
  "devDependencies": {
    "babel-core": "6.26.0",
    "babel-jest": "21.0.2",
    "babel-loader": "7.1.2",
    "babel-preset-env": "1.6.0",
    "jest": "21.0.2",
    "rimraf": "2.6.1",
    "rollup-plugin-babel": "3.0.2",
    "standard-version": "4.2.0",
    "webpack": "3.5.6"
  },
  "jest": {
    "bail": true,
    "collectCoverage": true,
    "verbose": true
  }
}
